@model IEnumerable<LisBlanc.AdminPanel.Models.AppointmentRequest>

@{
    ViewData["Title"] = "Входящие заявки";
}

<h1>Входящие заявки на запись</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        Создать новую заявку
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя клиента</th>
            <th>Телефон</th>
            <th>Мастер</th>
            <th>Услуга</th>
            <th>Стоимость</th>
            <th>Дата и время записи</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClientName)</td>
                <td>@Html.DisplayFor(modelItem => item.ClientPhone)</td>
                <td>@(item.Master?.FullName ?? "Не указан")</td>
                <td>@(item.Service?.Name ?? "Не указана")</td>
                <td>
                    @if (item.Service != null)
                    {
                        <strong>@item.Service.Price.ToString("N0") ₽</strong>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    @if (item.CreatedAt > DateTime.MinValue && item.CreatedAt.Year > 2000)
                    {
                        @item.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                    }
                    else
                    {
                        <span class="text-muted">Дата не указана</span>
                    }
                </td>
                <td>
                    @switch (item.Status)
                    {
                        case RequestStatus.Confirmed:
                            <span class="badge bg-success">Подтверждена</span>
                            break;
                        case RequestStatus.New:
                            <span class="badge bg-success">Новая</span>
                            break;
                        case RequestStatus.Rejected:
                            <span class="badge bg-danger">Отклонена</span>
                            break;
                    }
                </td>
                <td>
                    <div class="btn-group" role="group" style="gap: 5px;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>

                       
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
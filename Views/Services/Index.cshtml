@model IEnumerable<LisBlanc.AdminPanel.Models.Service>

@{
    ViewData["Title"] = "Услуги";
}

<h1>Управление услугами</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить новую услугу</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.DurationMinutes)</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <span class="badge" style="background: linear-gradient(135deg, var(--medium-lavender), var(--purple)); color: white;">
                        @Html.DisplayFor(modelItem => item.Category)
                    </span>
                </td>
                <td><strong>@Html.DisplayFor(modelItem => item.Price) ₽</strong></td>
                <td>@Html.DisplayFor(modelItem => item.DurationMinutes) мин</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Просмотр</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table></table>
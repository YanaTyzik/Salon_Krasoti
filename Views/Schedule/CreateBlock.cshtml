@model LisBlanc.AdminPanel.Models.ScheduleSlot
@using LisBlanc.AdminPanel.Models
@{
    ViewData["Title"] = "Добавить блокировку";
}

<h1>Добавить блокировку в расписание</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateBlock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="form-group">
                <label for="masterId" class="control-label">Мастер</label>
                <select name="masterId" class="form-control" asp-items="@(new SelectList(ViewBag.Masters, "Id", "FullName"))" required>
                    <option value="">-- Выберите мастера --</option>
                </select>
            </div>

            <div class="form-group">
                <label for="status" class="control-label">Тип блокировки</label>
                <select name="status" class="form-control" required>
                    <option value="2">Выходной</option>
                    <option value="3">Больничный</option>
                    <option value="4">Отпуск</option>
                </select>
            </div>

            <div class="form-group">
                <label for="startDate" class="control-label">Дата начала</label>
                <input name="startDate" type="date" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="endDate" class="control-label">Дата окончания</label>
                <input name="endDate" type="date" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="reason" class="control-label">Причина (необязательно)</label>
                <input name="reason" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Добавить</button>
                <a asp-action="Index" class="btn btn-secondary">Назад к расписанию</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}